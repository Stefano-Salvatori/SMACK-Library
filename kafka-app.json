{
  "id": "kafka",
  "container": {
    "docker": {
      "image": "wurstmeister/kafka",
      "network": "HOST",
      "forcePullImage": true,
      "privileged": true
    }
  },
  "env": {
    "HOSTNAME_COMMAND": "ip route get 8.8.8.8 | awk '{print ; exit}'",
    "KAFKA_ADVERTISED_LISTENERS": "1.2.3.4",
    "KAFKA_LISTENERS": "1.2.3.4",
    "KAFKA_ZOOKEEPER_CONNECT": "1.2.3.4",
    "KAFKA_LISTENER_SECURITY_PROTOCOL_MAP": "INSIDE:PLAINTEXT,OUTSIDE:PLAINTEXT",
    "KAFKA_INTER_BROKER_LISTENER_NAME": "INSIDE"
  },
  "cpus": 1,
  "mem": 2048,
  "instances": 1
}

